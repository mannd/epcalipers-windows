<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="EPCalipersWinUI3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EPCalipersWinUI3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="52"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"  Orientation="Horizontal" Spacing="15" x:Name="TitleBar" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <Image Source="/Assets/StoreLogo.scale-200.png" />
            <TextBlock Margin="5" VerticalAlignment="Center" Text="EP Calipers 3" />
        </StackPanel>
        <MenuBar Grid.Row="1" >
            <MenuBarItem Title="File">
                <MenuFlyoutItem Text="Open..." />
            </MenuBarItem>
            <MenuBarItem Title="Image">
                <MenuFlyoutItem Text="Open..." />
            </MenuBarItem>
            <MenuBarItem Title="Calipers">
                <MenuFlyoutItem Text="Open..." />
            </MenuBarItem>
            <MenuBarItem Title="Tools">
                <MenuFlyoutItem Text="Open..." />
            </MenuBarItem>
            <MenuBarItem Title="Help">
                <MenuFlyoutItem Text="Open..." />
            </MenuBarItem>
        </MenuBar>
        <CommandBar Grid.Row="2" Background="Transparent" IsOpen="False" DefaultLabelPosition="Right">
            <AppBarButton Icon="OpenFile" Label="Open">
            </AppBarButton>
            <AppBarSeparator/>
            <AppBarButton Icon="ZoomIn" ToolTipService.ToolTip="Zoom in" />
            <AppBarButton Icon="ZoomOut" ToolTipService.ToolTip="Zoom out"/>
            <AppBarSeparator/>
            <AppBarButton>
                <BitmapIcon UriSource="Assets/Square44x44Logo.targetsize-16.png" ToolTipService.ToolTip="Add caliper"/>
            </AppBarButton>
            <AppBarSeparator/>
            <AppBarButton Label="Calibration"/>
            <AppBarButton Label="Rate/Int"/>
            <AppBarButton Label="MeanInt"/>
            <AppBarButton Label="QTc"/>
            <CommandBar.SecondaryCommands>
                <AppBarButton Icon="Setting" Label="Settings">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="I" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
            </CommandBar.SecondaryCommands>
        </CommandBar>
        <Canvas x:Name="canvas" Grid.Row="3">
            <Image x:Name="image" Source="Assets/sampleECG.jpg" />
        </Canvas>
    </Grid>
</Window>

